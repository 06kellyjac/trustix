<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width,initial-scale=1'>

    <title>{{ title }}</title>

    <link href="/static/style.css" rel="stylesheet">
  </head>

  <body>
    {% include "includes/header.jinja2" %}

    <main>
      {% block main %}
      {% endblock %}
    </main>

    {% include "includes/footer.jinja2" %}

    {# Charting #}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/c3/0.7.20/c3.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/c3/0.7.20/c3.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/5.16.0/d3.js" charset="utf-8"></script>

    {# Tooltips #}
    <script src="https://unpkg.com/@popperjs/core@2"></script>
    <script src="https://unpkg.com/tippy.js@6"></script>

    {# Search autocomplete #}
    <script src="https://cdn.jsdelivr.net/npm/ejs@3.1.6/ejs.min.js"></script>

    <script type="text/javascript" src="/static/attr-chart-render.js"></script>
    <script type="text/javascript" src="/static/drv-pie-render.js"></script>
    <script type="text/javascript" src="/static/suggestions.js"></script>
    <script type="text/javascript" src="/static/tooltips.js"></script>

    {% block deferred %}
    {% endblock %}


  </body>
</html>
